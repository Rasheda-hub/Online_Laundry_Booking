# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_ALGORITHM=HS256
JWT_EXP_MINUTES=60

# Neo4j Database Configuration
NEO4J_URI=neo4j+s://your-aura-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Application URLs
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# Email Configuration for Email Verification
# For Gmail: Use App Password (not your regular password)
# Enable 2FA and generate App Password at: https://myaccount.google.com/apppasswords
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@laundryapp.com
MAIL_FROM_NAME=LaundryApp
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587

# Note: If MAIL_USERNAME and MAIL_PASSWORD are not set, 
# verification links will be printed to console (development mode)
